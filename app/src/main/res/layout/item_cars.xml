<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dpto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textSize="22sp"
            android:fontFamily="@font/teen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View	android:id="@+id/separador1"
        android:background="#f0ffff"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

    <TextView
        android:id="@+id/presentacion1"
        android:fontFamily="@font/primerprint"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left"
        android:text="ExtenciÃ³n:"
        android:textSize="19sp"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/extencion"
            android:fontFamily="@font/primerprintbold"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View	android:id="@+id/separador2"
        android:background="#f0ffff"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

    <TextView
        android:id="@+id/forma1"
        android:fontFamily="@font/primerprint"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left"
        android:text="Directo:"
        android:textSize="19sp"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/directo"
            android:fontFamily="@font/primerprintbold"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>